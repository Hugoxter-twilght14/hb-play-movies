generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  name String?
  email String @unique
  emailVerified DateTime?
  image String?
  password String?

  userNetflix UserNetflix[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserNetflix{
  id String @id @default(cuid())
  profileName String
  avatarUrl String

  userId String
  User User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Movie {
  id String @id @default(cuid())
  title String
  thumbnailUrl String
  genre String[]
  age String
  duration String
  trailerVideo String
  movieVidieo String

  createdAt DateTime @default(now())
}

model PopularMovie{
  id String @id @default(cuid())
  title String
  thumbnailUrl String
  genre String[]
  age String
  duration String
  trailerVideo String
  movieVidieo String

  ranking Int
}

model Serie {
  id          String       @id @default(cuid())
  title       String
  thumbnailUrl String
  genre       String[]
  age         String
  duration    String
  trailerVideo String
  createdAt   DateTime     @default(now())

  seasons     Season[]     // Relación con las temporadas
}

model Season {
  id          String       @id @default(cuid())
  number      Int          // Número de la temporada
  serieId     String
  serie       Serie        @relation(fields: [serieId], references: [id])
  episodes    Episode[]    // Relación con los episodios
}


model Episode {
  id          String       @id @default(cuid())
  number      Int          // Número del episodio
  title       String
  duration    String       // Duración del episodio
  videoUrl    String       // URL del video del episodio
  seasonId    String
  season      Season       @relation(fields: [seasonId], references: [id])
}

model Anime {
  id           String        @id @default(cuid())
  title        String
  thumbnailUrl String
  genre        String[]
  age          String
  duration     String
  trailerVideo String
  createdAt    DateTime      @default(now())

  seasons      AnimeSeason[] // Relación con las temporadas
}

model AnimeSeason {
  id           String        @id @default(cuid())
  number       Int           // Número de la temporada
  animeId      String
  anime        Anime         @relation(fields: [animeId], references: [id])
  episodes     AnimeEpisode[] // Relación con los episodios
}

model AnimeEpisode {
  id           String        @id @default(cuid())
  number       Int           // Número del episodio
  title        String
  duration     String        // Duración del episodio
  videoUrl     String        // URL del video del episodio
  animeSeasonId String
  animeSeason  AnimeSeason   @relation(fields: [animeSeasonId], references: [id])
}
